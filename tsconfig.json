{
  "compilerOptions": {
    "strict": true,
    "jsx": "react",
    "target": "ESNext",
    "module": "ESNext",
    "allowJs": true,
    "moduleResolution": "Node",
    "baseUrl": "./",
    // 允许从没有设置默认导出的模块中默认导入
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
    // "rootDir": "src"
  },
  "exclude": ["node_modules"],
  "include": ["src/*"]
}
